<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/head') %>
    <title><%= title %></title>
    <script defer type="module" src="/js/new-membership.js"></script>
  </head>
  <body>
    <%- include('partials/spinner') %> <%- include('partials/header') %>
    <div class="container">
      <div class="head-block">
        <div>
          <h1>Create Membership</h1>
        </div>
      </div>
      <div class="membership form-block">
        <form id="newMembershipForm">
          <div class="form-wrapper">
            <div class="input-block">
              <label for="membershipName">Name</label>
              <input class="inputs" type="text" placeholder="Name" id="membershipName" autocomplete="off" required />
            </div>
            <div class="input-block">
              <label for="membershipPrice">Membership Price</label>
              <div class="input-group">
                <i class="fa-solid fa-dollar-sign"></i>
                <input class="inputs" type="text" placeholder="Membership Price" id="membershipPrice" autocomplete="off" required />
              </div>
            </div>
            <div class="input-block">
              <label for="membershipDescription">Description</label>
              <textarea class="inputs" id="membershipDescription" cols="30" rows="10" required></textarea>
            </div>
          </div>
          <div>
            <a href="/memberships" class="btn fw-bold">Cancel</a>
            <button class="btn-primary fw-bold" type="submit">New Membership</button>
          </div>
        </form>
      </div>
    </div>
    <%- include('partials/footer') %>
  </body>
</html>
